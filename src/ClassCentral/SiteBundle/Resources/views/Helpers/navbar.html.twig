<!-- fb like button js -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
    
<!-- Google+ button -->
<script type="text/javascript">
  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>

<div class="navbar {% if page is defined %} navbar-fixed-top {% endif %} ">
    <div class="navbar-inner cc-navbar">
        <div class="container">
            
<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
	    <div class="nav-collapse">
            <ul class="nav pull-left">
                <li>
                    <a href="{{ path('ClassCentralSiteBundle_homepage')}}"><h1>Class Central</h1></a>
                </ul>
            </ul>
            <ul class="nav pull-right">
                 <li class="dropdown">  
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Initiatives<b class="caret"></b></a>  
                    <ul class="dropdown-menu">  
                    {% for initiative, code in initiativeTypes %}                            
                        <li>
                            <a href="{{ path('ClassCentralSiteBundle_initiative',{'type' : initiative})}}" onClick="_gaq.push(['_trackEvent', '{{ navEventName }}', 'Initiative', '{{initiative}}'])">{{initiativeCount[code]['name'] }} ({{ initiativeCount[code]['count'] }})</a>
                        </li>
                    {% endfor %}                            
                    </ul>
                </li>
                <!-- streams !-->
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Stream<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        {% for stream in streams %}
                            <li>
                                <a href="{{ path('ClassCentralSiteBundle_stream',{'slug':stream['slug']}) }}" onClick="_gaq.push(['_trackEvent', '{{ navEventName }}', 'Stream', '{{stream['name']}}'])">{{ stream['name'] }} ({{ stream['total'] }})</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>

                <li class="dropdown">  
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Courses<b class="caret"></b></a>  
                    <ul class="dropdown-menu">  
                    {% for offeringType, offeringDetails in offeringTypes %}
                            {% if offeringCount[offeringType] > 0 %}
                                <li><a href="{{ path('ClassCentralSiteBundle_courses',{'type' : offeringType})}}" onClick="_gaq.push(['_trackEvent', '{{ navEventName }}', 'Courses', '{{offeringType}}'])">{{offeringDetails.nav}} ({{ offeringCount[offeringType] }})</a></li>
                            {% endif %}
                    {% endfor %}                            
                    </ul>
                </li> 
                 <li><a href="https://plus.google.com/{{plusPageUrl}}/" target="_blank" onClick="_gaq.push(['_trackEvent', '{{ navEventName }}', 'News'])">News</a></li>
                 <li>
                     <form action="{{ path('ClassCentralSiteBundle_search') }}" method="get" name="search">
                         <div class="input-append">
                             <input class="span2" id="prependedInput" type="text" name="q">
                             <span class="add-on"><i class="icon-search"></i></span>
                         </div>
                     </form>
                 </li>
            </ul>
            {% if app.environment == 'prod' and page is defined %}
	    </div>
            {% endif %}
        </div>
    </div>
</div>

<div class="navbar {% if page is defined %} navbar-fixed-top {% endif %} navbar-inverse">
    <div class="navbar-inner">
        <div class="container">
            
<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
	    <div class="nav-collapse">
            <ul class="nav">                
		<li {% if page is defined and page=='home' %}class="active"{% endif %}><a href="{{ path('ClassCentralSiteBundle_homepage')}}">Home</a></li> 		                              
                 <li class="dropdown">  
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Initiatives<b class="caret"></b></a>  
                    <ul class="dropdown-menu">  
                    {% for initiative, code in initiativeTypes %}                            
                        <li>
                            <a href="{{ path('ClassCentralSiteBundle_initiative',{'type' : initiative})}}">{{initiativeCount[code]['name'] }} ({{ initiativeCount[code]['count'] }})</a>
                        </li>                            
                    {% endfor %}                            
                    </ul>
                </li>  
                <li class="dropdown">  
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Courses<b class="caret"></b></a>  
                    <ul class="dropdown-menu">  
                    {% for offeringType, offeringDetails in offeringTypes %}
                            {% if offeringCount[offeringType] > 0 %}
                                <li><a href="{{ path('ClassCentralSiteBundle_courses',{'type' : offeringType})}}">{{offeringDetails.nav}} ({{ offeringCount[offeringType] }})</a></li>
                            {% endif %}
                    {% endfor %}                            
                    </ul>
                </li> 
                 <li><a href="https://plus.google.com/{{plusPageUrl}}/" target="_blank">News</a></li>
                 <li><a href="http://www.blog.class-central.com" target="_blank">Blog</a></li>
                 <li {% if page is defined and page=='search' %}class="active"{% endif %}><a href="{{ path('ClassCentralSiteBundle_search')}}">Search</a></li> 		                 
            </ul>
            {% if app.environment == 'prod' and page is defined %}
		    <ul class="nav pull-right">
                        <li class="social-btn-nav">
                            <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.class-central.com" data-text="Free online courses from Stanford, MIT, Harvard etc offered via Coursera, Udacity, edX &amp; others" data-via="classcentral" data-hashtags="mooc">Tweet</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                        </li>
			<li class="social-btn-nav">
			    <div id='addThisButton'>
				<!-- AddThis Button BEGIN -->                                
				<div class="addthis_toolbox addthis_default_style ">
					<a class="addthis_button_facebook_like" fb:like:layout="button_count" fb:like:href="https://www.facebook.com/classcentral"></a>					
					<a class="addthis_button_google_plusone" g:plusone:size="medium" g:plusone:href="http://www.class-central.com"></a>
				    </div>                          
				    <!-- AddThis Button END -->                                
			    </div>                          
			</li>
			<li class="social-btn-nav"><iframe src="http://ghbtns.com/github-btn.html?user=dhawalhshah&repo=class-central&type=watch&count=true"
				  allowtransparency="true" frameborder="0" scrolling="0" width="100px" height="20px"></iframe></li>
		    </ul>
	    </div>
            {% endif %}
        </div>
    </div>
</div>

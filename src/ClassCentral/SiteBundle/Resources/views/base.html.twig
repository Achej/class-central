<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">        
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {%  block headmeta %}               
        {% endblock %}  
        <link href='http://fonts.googleapis.com/css?family=Nixie+One' rel='stylesheet' type='text/css'>       
        <link rel="icon"  type="image/png" href="{{ asset('bundles/classcentralsite/slashpixel/images/favicon.png') }}">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <!-- Le styles -->  
        {% stylesheets
        '@ClassCentralSiteBundle/Resources/public/slashpixel/css/bootstrap.css'
        '@ClassCentralSiteBundle/Resources/public/slashpixel/css/bootstrap-responsive.css'
        '@ClassCentralSiteBundle/Resources/public/slashpixel/css/classcentral.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
             

      

        {% if app.environment == 'prod' and page is defined %}
        <!-- Facebook opengraph tag -->
        {% include 'ClassCentralSiteBundle:Helpers:fb_opengraph.html.twig' %}
        
        <!-- Google+ Direct connect -->
        <link href="https://plus.google.com/{{plusPageUrl}}" rel="publisher" />
        
            {% if ganalytics_id is defined %}
            <!-- Including google analytics. The parameter ganalytics_id must be set in parameters.ini -->
            <script type="text/javascript">

                var _gaq = _gaq || [];
                _gaq.push(['_setAccount', '{{ ganalytics_id }}']);
                _gaq.push(['_trackPageview']);

                (function() {
                    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
                })();

            </script>
            {% endif %}
        {% endif %}
        
         <!-- Le fav and touch icons -->
        <link rel="shortcut icon" href="{{ asset('bundles/classcentralsite/slashpixel/images/favicon.png') }}">
        <link rel="apple-touch-icon" href="{{ asset('bundles/classcentralsite/slashpixel/images/apple-touch-icon.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('bundles/classcentralsite/slashpixel/images/apple-touch-icon-72x72.png') }}" >
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('bundles/classcentralsite/slashpixel/images/apple-touch-icon-114x114.png') }}">

    </head>

    <body>        
        
        <div class="container">

            {%  block content %}   
            <br /><br />
            {% endblock %} 
            
            {% include 'ClassCentralSiteBundle:Helpers:faq.html.twig' with{} %}

            <footer>
                {% block footer %}                    
                    
                     <ul class="classcentralfooter nav nav-pills">              
                         <li><a data-toggle="modal" href="#learnmore">Learn more</a></li>
                         <li><a href="mailto:contact@class-central.com">contact@class-central.com</a></li>                         
                         <li class="social">
                        <!-- AddThis Button BEGIN -->
                            <div class="addthis_toolbox addthis_default_style ">
                                <a class="addthis_button_facebook_like" fb:like:layout="button_count" fb:like:href="http://www.class-central.com"></a>
                                <a class="addthis_button_tweet" tw:url="http://www.class-central.com" tw:via="classcentral"></a>
                                <a class="addthis_button_google_plusone" g:plusone:size="medium" g:plusone:href="http://www.class-central.com"></a>
                            </div>
                            <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4ed5948263b508c1"></script>
                            <!-- AddThis Button END -->
                        </li>
                        <li class="social"><a href="https://github.com/dhawalhshah/class-central" class="gitforked-button gitforked-forks gitforked-watchers">Fork</a></li>
                    </ul>
                    
                {% endblock %}
                    
            </footer>

        </div> <!-- /container -->
       
            
        {% javascripts
        '@ClassCentralSiteBundle/Resources/public/slashpixel/js/jquery-1.7.1.min.js'        
        '@ClassCentralSiteBundle/Resources/public/slashpixel/js/bootstrap.min.js'
        '@ClassCentralSiteBundle/Resources/public/slashpixel/js/jquery.backstretch.min.js' 
        '@ClassCentralSiteBundle/Resources/public/slashpixel/js/smoothscrolling.js'
        '@ClassCentralSiteBundle/Resources/public/slashpixel/js/jquery.prettyPhoto.js'
        '@ClassCentralSiteBundle/Resources/public/slashpixel/js/jquery.tablesorter.min.js'
        %}
         <script type="text/javascript" src="{{ asset_url }}"></script>
        
        {% endjavascripts %}
        
        <script type="text/javascript">
            $.backstretch("{{ asset('bundles/classcentralsite/slashpixel/images/background.jpg') }}");
        </script>
        
        <script src="http://gitforked.com/api/1.1/button.js" type="text/javascript"></script>   
         <!-- Jquery Lightbox plugin -->
        <script type="text/javascript" charset="utf-8">
            $(document).ready(function(){
                $("a[rel^='intro']").prettyPhoto({
                    social_tools : false,
                    show_title: false,
                    default_width: 640,
                    default_height:480
                });
            });
        </script>  
       
        <script type="text/javascript">
            {% block customJS %}
            {% endblock %}
        </script>
    </body>
</html>
